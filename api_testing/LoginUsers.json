    "item": [
      {
        "name": "Login Admin",
        "request": {
          "method": "POST",
          "url": {
            "raw": "http://localhost:3000/api/login",
            "protocol": "http",
            "host": ["localhost"],
            "port": "3000",
            "path": ["api", "login"]
          },
          "body": {
            "mode": "raw",
            "raw": "{\n  \"username\": \"admin_user\",\n  \"password\": \"admin_password\"\n}"
          }
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "pm.collectionVariables.set(\"admin_token\", pm.response.json().token);"
              ],
              "type": "text/javascript"
            }
          }
        ]
      },
