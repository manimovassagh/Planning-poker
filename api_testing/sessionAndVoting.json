
{
    "info": {
      "name": "Planning Poker - Session and Voting",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Create Session",
        "request": {
          "method": "POST",
          "url": {
            "raw": "http://localhost:3000/api/sessions",
            "protocol": "http",
            "host": ["localhost"],
            "port": "3000",
            "path": ["api", "sessions"]
          },
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{admin_token}}"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"session_name\": \"Sprint Planning Session\"\n}"
          }
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "pm.collectionVariables.set(\"session_id\", pm.response.json().ID);"
              ],
              "type": "text/javascript"
            }
          }
        ]
      },
      {
        "name": "Create Task",
        "request": {
          "method": "POST",
          "url": {
            "raw": "http://localhost:3000/api/sessions/{{session_id}}/tasks",
            "protocol": "http",
            "host": ["localhost"],
            "port": "3000",
            "path": ["api", "sessions", "{{session_id}}", "tasks"]
          },
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{admin_token}}"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"task_name\": \"User Login Feature\",\n  \"task_description\": \"Implement user login functionality\"\n}"
          }
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "pm.collectionVariables.set(\"task_id\", pm.response.json().ID);"
              ],
              "type": "text/javascript"
            }
          }
        ]
      }
    ]
  }
  